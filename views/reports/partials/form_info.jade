	input(type="text", name="date", value=fields.date, placeholder="YYYY-MM")

fieldset#upcoming(class=fields.upcoming.length ? '' : 'close')
	legend Upcoming Events
	div.template
		input(type="date", name="upcoming[i][date]", placeholder="YYYY-MM-DD", disabled).date
		&nbsp;-&nbsp;
		input(type="text", name="upcoming[i][name]", placeholder="Event", disabled)
		a.btn-red.icon-remove
	- each upcoming, i in fields.upcoming
		div
			input(type="date", name="events["+i+"][date]", placeholder="YYYY-MM-DD", value=upcoming.date).date
			&nbsp;-&nbsp;
			input(type="text", name="events["+i+"][name]", placeholder="Event", value=upcoming.name)
			a.btn-red.icon-remove
	a.btn-green.icon-plus-sign  Add

