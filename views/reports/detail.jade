extend ../layout

block content
	h2= "Report for "+report.date
	p= "Status: "+report.status
	p.tabs
		a(href="#info").selected Info
		a(href="#prestige") Prestige

	section#info.tab
		include partials/detail_info

	section#prestige.hide.tab
		include partials/detail_prestige

	a(href="/report/edit/"+report._id).btn-yellow Edit
	a(href="/report/delete/"+report._id).btn-red Delete