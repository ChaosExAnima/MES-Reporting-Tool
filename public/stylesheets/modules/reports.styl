.section-report
.section-report-edit
	fieldset > div
		padding-bottom 1em
		border-bottom 1px solid darken(background-color, 30%)
		margin 1em 0

	.template
		@extend .hide

.section-report
	#prestige
		p
			margin 1em 0

	.drop-zone
		padding 1em
		margin @padding 0
		color darken(background-color, 70%)
		background-color darken(background-color, 10%)
		border 1px dashed darken(background-color, 50%)


		li
			padding .5em 0

			&.drop-placeholder
				background-color darken(background-color, 20%)
				height 2em