/*
 * Structure
 */

header
  padding 2em 1em 1em
  color #fff
  overflow auto
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

  h1
    text-align center
    font-family 'Quicksand', sans-serif

  nav
    width main-width
    margin 1em auto 0

  li
    float left
    list-style none
    margin 1em

    a
      color #fff

    .current
      font-weight bold

.container
  width main-width
  margin margin-width auto
  overflow hidden

footer
  width main-width
  margin 3em auto
  border-top 1px dotted darken(background-color, 30%)
  padding-top .5em

  p
    font-size .75em