.ui-helper-hidden-accessible
	display none

.ui-autocomplete
	border 1px solid darken(background-color, 50%)
	background white
	position absolute
	cursor default

.ui-menu
	list-style none
	padding 0 1em
	margin 0
	display block
	outline none

	li
		padding 0.5em 0
		border-bottom 1px dotted darken(background-color, 50%)
		cursor pointer

		&:last-child
			border-bottom none