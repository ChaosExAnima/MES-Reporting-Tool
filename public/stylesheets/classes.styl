/**
 * Notifications.
 */


.msg-box
  padding .5em
  margin-bottom 1em
  border 1px solid background-color

.msg-box
  &.notification
    color darken(background-color, 70%)
    border-color darken(background-color, 50%)
    background-color darken(background-color, 10%)

  &.warning
    color white
    background accent-color
    border-color darken(accent-color, 30%)

  &.error
    color white
    background main-color
    border-color darken(main-color, 30%)

/**
 * Text
 */

.error
  color darken(main-color, 30%)

/**
 * Tabs
 */

.tabs
  a
    display inline-block
    background-color darken(background-color, 10%)
    color darken(background-color, 70%)
    padding .25em .5em
    border 1px solid darken(background-color, 50%)
    margin-right 1em

    &.selected
    &:hover
      text-decoration none
      background-color darken(background-color, 30%)
      color black
      border-color darken(background-color, 70%)

    &:last-child
      margin-right 0

/**
 * Buttons
 */

.button
  padding .5em 1em
  color #fff
  border-radius .5em
  cursor pointer
  display inline-block
  font-size 1em
  line-height 1
  margin .2em
  -webkit-appearance none

  &:hover
    text-decoration none

.container > a:last-child
    margin-top 1em

.btn-red
  @extend .button
  background main-color
  border 1px solid darken(main-color, 30%)

  &:hover
    background darken(main-color, 30%)
    border-color darken(main-color, 50%)

.btn-green
  @extend .button
  background confirm-color
  border-color darken(confirm-color, 50%)

  &:hover
    background darken(confirm-color, 30%)
    border-color darken(confirm-color, 50%)

.btn-yellow
  @extend .button
  background accent-color
  border-color darken(accent-color, 50%)

  &:hover
    background saturate(accent-color, 50%)
    border-color darken(accent-color, 30%)

.cancel
  @extend .btn-red

.edit
  @extend .btn-green

.cancel
.edit
  padding 0.5em
  margin 0 .2em
  height 2em


/**
 * Data.
 */

.no-data
  text-align center
  font-style oblique
  color lighten(text-color, 20%)

.date
  width 12em

.hide
.start-closed
  display none